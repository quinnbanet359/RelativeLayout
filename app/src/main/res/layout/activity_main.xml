<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quinnbanet.relativelayout.MainActivity">
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/lizard"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="lizardClicker"
            android:background="@null" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/rock"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:background="@null"
            android:onClick="rockClicker"
            android:layout_below="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/paper"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:layout_below="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:background="@null"
            android:onClick="paperClicker" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:src="@drawable/scissors"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:background="@null"
            android:onClick="scissorsClicker"
            android:layout_below="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:src="@drawable/lizard"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:layout_below="@+id/imageButton2"
            android:layout_alignEnd="@+id/imageButton2" 
            android:onClick="lizardClicker"
            android:background="@null" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton6"
            android:src="@drawable/rock"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:layout_below="@+id/imageButton2"
            android:layout_alignStart="@+id/imageButton3"
            android:background="@null"
            android:onClick="rockClicker" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton7"
            android:src="@drawable/paper"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:layout_below="@+id/imageButton6"
            android:layout_alignStart="@+id/imageButton6"
            android:background="@null"
            android:onClick="paperClicker" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton8"
            android:src="@drawable/rock"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:background="@null"
            android:onClick="rockClicker"
            android:layout_below="@+id/imageButton6"
            android:layout_toEndOf="@+id/imageButton6" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton9"
            android:src="@drawable/spock"
            android:maxWidth="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:layout_below="@+id/imageButton7"
            android:layout_alignStart="@+id/imageButton7"
            android:background="@null"
            android:onClick="spockClicker" />
    </RelativeLayout>

</RelativeLayout>
